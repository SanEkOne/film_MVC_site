        <a asp-action="Index" class="logo">KinoMan</a>
        <a asp-action="Create">Добавить фильм</a>
    </header>

    <div class="container body-content">
        @RenderBody() 
        <hr />
       
    </div> 

    <script src="~/lib/jquery/dist/jquery.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>